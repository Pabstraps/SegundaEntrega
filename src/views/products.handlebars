<!-- products.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
</head>
<body>
    <h1>Lista de Productos</h1>
    <ul>
        {{#each products}}
            <li>
                <h3>{{this.title}}</h3>
                <p>Descripción: {{this.description}}</p>
                <p>Precio: ${{this.price}}</p>
                <p>Categoría: {{this.category}}</p>
                <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
            </li>
        {{/each}}
    </ul>

    {{#if pagination.prev}}
        <a href="/products?page={{pagination.prev.page}}&limit={{pagination.prev.limit}}">Anterior</a>
    {{/if}}

    {{#if pagination.next}}
        <a href="/products?page={{pagination.next.page}}&limit={{pagination.next.limit}}">Siguiente</a>
    {{/if}}

    <script>
        function addToCart(productId) {
            // Aquí puedes implementar la lógica para agregar el producto al carrito
            alert("Producto agregado al carrito: " + productId);
        }
    </script>
</body>
</html>
